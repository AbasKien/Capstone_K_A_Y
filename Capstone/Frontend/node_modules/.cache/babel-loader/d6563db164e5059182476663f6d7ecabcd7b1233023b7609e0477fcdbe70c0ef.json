a;\n        showModal.value = true;\n      } catch (error) {\n        console.error('Error fetching product logs:', error);\n      }\n    };\n    const closeModal = () => {\n      showModal.value = false;\n    };\n    const printLogs = () => {\n      window.print();\n    };\n    const downloadCSV = () => {\n      const headers = ['ID', 'Previous Quantity', 'Quantity Changed', 'New Quantity', 'Reason', 'Created At'];\n      const csvContent = [headers.join(','), ...selectedProductLogs.value.map(log => [log.log_id, log.previous_quantity, log.quantity_changed, log.new_quantity, log.reason, new Date(log.created_at).toLocaleString()].join(','))].join('\\n');\n      const blob = new Blob([csvContent], {\n        type: 'text/csv;charset=utf-8;'\n      });\n      const link = document.createElement('a');\n      const url = URL.createObjectURL(blob);\n      link.setAttribute('href', url);\n      link.setAttribute('download', 'product_logs.csv');\n      link.style.visibility = 'hidden';\n      document.body.appendChild(link);\n      link.click();\n      document.body.removeChild(link);\n    };\n    const handleLogout = () => {\n      localStorage.removeItem('token');\n      router.push('/login');\n    };\n    onMounted(() => {\n      checkAdminSession();\n      fetchProducts();\n    });\n    onBeforeUnmount(() => {\n      if (modalInstance) {\n        modalInstance.dispose();\n      }\n    });\n    return {\n      products,\n      selectedProductLogs,\n      showModal,\n      showLogs,\n      closeModal,\n      printLogs,\n      downloadCSV,\n      handleLogout\n    };\n  }\n};","map":{"version":3,"names":["ref","onMounted","onBeforeUnmount","axios","useRouter","setup","router","products","selectedProductLogs","showModal","modalInstance","checkAdminSession","token","localStorage","getItem","push","response","get","headers","Authorization","data","isAdmin","error","console","fetchProducts","value","showLogs","productId","closeModal","printLogs","window","print","downloadCSV","