\">\n        <h2>Products and Logs</h2>\n        <div class=\"card\">\n          <div class=\"card-header\">\n            <h5 class=\"card-title mb-0\">Products</h5>\n          </div>\n          <div class=\"card-body\">\n            <!-- DataTable for Products -->\n            <table id=\"productsTable\" class=\"table table-bordered table-striped\">\n              <thead>\n                <tr>\n                  <th class=\"text-center\">ID</th>\n                  <th class=\"text-center\">Name</th>\n                  <th class=\"text-center\">Stock</th>\n                  <th class=\"text-center\">Actions</th>\n                </tr>\n              </thead>\n              <tbody>\n                <tr v-for=\"product in products\" :key=\"product.id\">\n                  <td>{{ product.id }}</td>\n                  <td>{{ product.name }}</td>\n                  <td>{{ product.stock }}</td>\n                  <td>\n                    <button class=\"btn btn-info\" @click=\"showLogs(product.id)\">View Logs</button>\n                  </td>\n                </tr>\n              </tbody>\n            </table>\n          </div>\n        </div>\n      </div>\n    </div>\n\n    <!-- Modal for Product Logs -->\n    <div v-if=\"showModal\" class=\"modal fade show\" tabindex=\"-1\" style=\"display: block; background: rgba(0, 0, 0, 0.5)\">\n      <div class=\"modal-dialog modal-lg\">\n        <div class=\"modal-content\">\n          <div class=\"modal-header\">\n            <h5 class=\"modal-title\">Product Logs</h5>\n            <button type=\"button\" class=\"btn-close\" @click=\"closeModal\"></button>\n          </div>\n          <div class=\"modal-body\">\n            <div class=\"mb-3\">\n              <button class=\"btn btn-primary\" @click=\"printLogs\">Print</button>\n              <button class=\"btn btn-success ms-2\" @click=\"downloadCSV\">Download CSV</button>\n            </div>\n            <!-- Print Header - Only visible when printing -->\n            <div class=\"print-header d-none d-print-block mb-4\">\n              <div class=\"text-center\">\n                <h1 class=\"store-name\">MARGATHEO STORE</h1>\n                <p class=\"store-details\">Your One-Stop Fashion Destination</p>\n                <p class=\"store-address\">123 Fashion Avenue, Style District</p>\n                <p class=\"store-contact\">Contact: (123) 456-7890 | Email: info@margatheostore.com</p>\n                <div class=\"header-line\"></div>\n              </div>\n            </div>\n            <table id=\"logsTable\" class=\"table table-bordered table-striped\">\n              <thead>\n                <tr>\n                  <th>ID</th>\n                  <th>Previous Quantity</th>\n                  <th>Quantity Changed</th>\n                  <th>New Quantity</th>\n                  <th>Reason</th>\n                  <th>Created At</th>\n                </tr>\n              </thead>\n              <tbody>\n                <tr v-for=\"log in selectedProductLogs\" :key=\"log.log_id\">\n                  <td>{{ log.log_id }}</td>\n                  <td>{{ log.previous_quantity }}</td>\n                  <td>{{ log.quantity_changed }}</td>\n                  <td>{{ log.new_quantity }}</td>\n                  <td>{{ log.reason }}</td>\n                  <td>{{ new Date(log.created_at).toLocaleString() }}</td>\n                </tr>\n              </tbody>\n            </table>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { ref, onMounted, onBeforeUnmount } from 'vue';\nimport axios from 'axios';\nimport { useRouter } from 'vue-router';\n\nexport default {\n  setup() {\n    const router = useRouter();\n    const products = ref([]);\n    const selectedProductLogs = ref([]);\n    const showModal = ref(false);\n    let modalInstance = null;\n\n    const checkAdminSession = async () => {\n      try {\n        const token = localStorage.getItem('token');\n        if (!token) {\n          router.push('/login');\n          return;\n        }\n\n        const response = await axios.get('http://localhost:3000/api/admin/check-session', {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n\n        if (!response.data.isAdmin) {\n          router.push('/login');\n        }\n      } catch (error) {\n        console.error('Session check error:', error);\n        router.push('/login');\n      }\n    };\n\n    const fetchProducts = async () => {\n      try {\n        const token = localStorage.getItem('token');\n        const response = await axios.get('http://localhost:3000/api/products', {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        products.value = response.data;\n      } catch (error) {\n        console.error('Error fetching products:', error);\n      }\n    };\n\n    const showLogs = async (productId) => {\n      try {\n        const token = localStorage.getItem('token');\n        const response = await axios.get(`http://localhost:3000/api/product-logs/${productId}`, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        selectedProductLogs.value = response.data;\n        showModal.value = true;\n      } catch (error) {\n        console.error('Error fetching product logs:', error);\n      }\n    };\n\n    const closeModal = () => {\n      showModal.value = false;\n    };\n\n    const printLogs = () => {\n      window.print();\n    };\n\n    const downloadCSV = () => {\n      const headers = ['ID', 'Previous Quantity', 'Quantity Changed', 'New Quantity', 'Reason', 'Created At'];\n      const csvContent = [\n        headers.join(','),\n        ...selectedProductLogs.value.map(log => [\n          log.log_id,\n          log.previous_quantity,\n          log.quantity_changed,\n          log.new_quantity,\n          log.reason,\n          new Date(log.created_at).toLocaleString()\n        ].join(','))\n      ].join('\\n');\n\n      const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });\n      const link = document.createElement('a');\n      const url = URL.createObjectURL(blob);\n      link.setAttribute('href', url);\n      link.setAttribute('download', 'product_logs.csv');\n      link.style.visibility = 'hidden';\n      document.body.appendChild(link);\n      link.click();\n      document.body.removeChild(link);\n    };\n\n    const handleLogout = () => {\n      localStorage.removeItem('token');\n      router.push('/login');\n    };\n\n    onMounted(() => {\n      checkAdminSession();\n      fetchProducts();\n    });\n\n    onBeforeUnmount(() => {\n      if (modalInstance) {\n        modalInstance.dispose();\n      }\n    });\n\n    return {\n      products,\n      selectedProductLogs,\n      showModal,\n      showLogs,\n      closeModal,\n      printLogs,\n      downloadCSV,\n      handleLogout\n    };\n  }\n};\n</script>\n\n<style scoped>\n.dashboard {\n  display: flex;\n  min-height: 100vh;\n}\n\n.sidebar {\n  width: 250px;\n  position: fixed;\n  height: 100vh;\n}\n\n.main-content {\n  margin-left: 250px;\n  flex-grow: 1;\n  background-color: #f8f9fa;\n  min-height: 100vh;\n}\n\n.card {\n  box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);\n}\n\n.modal {\n  background: rgba(0, 0, 0, 0.5);\n}\n\n/* Print Header Styles */\n.print-header {\n  margin-bottom: 2rem;\n}\n\n.store-name {\n  font-size: 2.5rem;\n  font-weight: bold;\n  color: #2c3e50;\n  margin-bottom: 0.5rem;\n  font-family: 'Arial', sans-serif;\n}\n\n.store-details {\n  font-size: 1.2rem;\n  color: #34495e;\n  margin-bottom: 0.3rem;\n}\n\n.store-address, .store-contact {\n  font-size: 1rem;\n  color: #7f8c8d;\n  margin-bottom: 0.2rem;\n}\n\n.header-line {\n  height: 2px;\n  background: linear-gradient(to right, transparent, #2c3e50, transparent);\n  margin: 1rem auto;\n  width: 80%;\n}\n\n/* Print-specific styles */\n@media print {\n  .btn, .sidebar, .nav {\n    display: none !important;\n  }\n  \n  .print-header {\n    margin-top: 2rem;\n    margin-bottom: 3rem;\n  }\n  \n  .table {\n    width: 100%;\n    margin-top: 2rem;\n  }\n\n  .main-content {\n    margin-left: 0;\n  }\n}\n\n/* Responsive styles */\n@media (max-width: 768px) {\n  .sidebar {\n    width: 100%;\n    position: relative;\n    height: auto;\n  }\n\n  .main-content {\n    margin-left: 0;\n  }\n}\n</style>"],"mappings":";;;;;AA0HA,SAASA,GAAG,EAAEC,SAAS,EAAEC,eAAc,QAAS,KAAK;AACrD,OAAOC,KAAI,MAAO,OAAO;AACzB,SAASC,SAAQ,QAAS,YAAY;AAEtC,eAAe;EACbC,KAAKA,CAAA,EAAG;IACN,MAAMC,MAAK,GAAIF,SAAS,CAAC,CAAC;IAC1B,MAAMG,QAAO,GAAIP,GAAG,CAAC,EAAE,CAAC;IACxB,MAAMQ,mBAAkB,GAAIR,GAAG,CAAC,EAAE,CAAC;IACnC,MAAMS,SAAQ,GAAIT,GAAG,CAAC,KAAK,CAAC;IAC5B,IAAIU,aAAY,GAAI,IAAI;IAExB,MAAMC,iBAAgB,GAAI,MAAAA,CAAA,KAAY;MACpC,IAAI;QACF,MAAMC,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,IAAI,CAACF,KAAK,EAAE;UACVN,MAAM,CAACS,IAAI,CAAC,QAAQ,CAAC;UACrB;QACF;QAEA,MAAMC,QAAO,GAAI,MAAMb,KAAK,CAACc,GAAG,CAAC,+CAA+C,EAAE;UAChFC,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUP,KAAK;UAChC;QACF,CAAC,CAAC;QAEF,IAAI,CAACI,QAAQ,CAACI,IAAI,CAACC,OAAO,EAAE;UAC1Bf,MAAM,CAACS,IAAI,CAAC,QAAQ,CAAC;QACvB;MACF,EAAE,OAAOO,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,sBAAsB,EAAEA,KAAK,CAAC;QAC5ChB,MAAM,CAACS,IAAI,CAAC,QAAQ,CAAC;MACvB;IACF,CAAC;IAED,MAAMS,aAAY,GAAI,MAAAA,CAAA,KAAY;MAChC,IAAI;QACF,MAAMZ,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAME,QAAO,GAAI,MAAMb,KAAK,CAACc,GAAG,CAAC,oCAAoC,EAAE;UACrEC,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUP,KAAK;UAChC;QACF,CAAC,CAAC;QACFL,QAAQ,CAACkB,KAAI,GAAIT,QAAQ,CAACI,IAAI;MAChC,EAAE,OAAOE,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,0BAA0B,EAAEA,KAAK,CAAC;MAClD;IACF,CAAC;IAED,MAAMI,QAAO,GAAI,MAAOC,SAAS,IAAK;MACpC,IAAI;QACF,MAAMf,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAME,QAAO,GAAI,MAAMb,KAAK,CAACc,GAAG,CAAC,0CAA0CU,SAAS,EAAE,EAAE;UACtFT,OAAO,EAAE;YACPC,aAAa,EAAE,UAAUP,KAAK;UAChC;QACF,CAAC,CAAC;QACFJ,mBAAmB,CAACiB,KAAI,GAAIT,QAAQ,CAACI,IAAI;QACzCX,SAAS,CAACgB,KAAI,GAAI,IAAI;MACxB,EAAE,OAAOH,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK